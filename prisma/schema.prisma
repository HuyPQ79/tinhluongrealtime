generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --- 1. USER & AUTH ---
enum UserRole {
  ADMIN
  BAN_LANH_DAO
  GIAM_DOC_KHOI
  QUAN_LY
  KE_TOAN_LUONG
  NHAN_SU
  NHAN_VIEN
  AUDITOR
}

enum UserStatus {
  ACTIVE
  INACTIVE
  MATERNITY
  PROBATION
  PENDING_APPROVAL
}

model User {
  id                   String       @id
  username             String       @unique
  password             String
  name                 String
  avatar               String?      @db.Text
  email                String?
  phone                String?
  joinDate             DateTime     @default(now())
  status               UserStatus   @default(ACTIVE)
  roles                Json
  numberOfDependents   Int          @default(0)
  currentDeptId        String?
  department           Department?  @relation(fields: [currentDeptId], references: [id])
  
  // Lương cơ bản & Cấu hình cá nhân
  paymentType          String       @default("TIME")
  efficiencySalary     Decimal      @default(0) @db.Decimal(18, 2)
  pieceworkUnitPrice   Decimal      @default(0) @db.Decimal(18, 2)
  reservedBonusAmount  Decimal      @default(0) @db.Decimal(18, 2)
  probationRate        Int          @default(100)
  
  attendanceRecords    AttendanceRecord[]
  evaluationRequests   EvaluationRequest[]
  salaryRecords        SalaryRecord[]
  
  // Ánh xạ vào bảng 'users'
  @@map("users")
}

model Department {
  id              String   @id @default(cuid())
  name            String
  budgetNorm      Decimal  @default(0) @db.Decimal(18, 2)
  managerId       String?
  hrId            String?
  blockDirectorId String?
  users           User[]
  
  // Ánh xạ vào bảng 'departments'
  @@map("departments")
}

// --- 2. CHẤM CÔNG & LƯƠNG (CORE) ---
enum RecordStatus {
  DRAFT
  PENDING
  PENDING_MANAGER
  PENDING_GDK
  PENDING_BLD
  PENDING_HR
  APPROVED
  REJECTED
}

enum AttendanceType {
  TIME
  PIECEWORK
  DAILY
  MODE
  HOLIDAY
  PAID_LEAVE
  UNPAID
  WAITING
}

model AttendanceRecord {
  id                   String         @id @default(cuid())
  userId               String
  user                 User           @relation(fields: [userId], references: [id])
  date                 String         // YYYY-MM-DD
  type                 AttendanceType @default(TIME)
  hours                Float          @default(8)
  overtimeHours        Float          @default(0)
  otRate               Float          @default(1.5)
  isOvertimeWithOutput Boolean        @default(false)
  output               Float?
  pieceworkUnitPrice   Decimal?       @db.Decimal(18, 2)
  status               RecordStatus   @default(DRAFT)
  notes                String?        @db.Text
  rejectionReason      String?        @db.Text
  sentToHrAt           DateTime?
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  // Ánh xạ vào bảng 'attendance_records'
  @@unique([userId, date])
  @@map("attendance_records")
}

model SalaryRecord {
  id                     String       @id @default(cuid())
  userId                 String
  user                   User         @relation(fields: [userId], references: [id])
  date                   String       // YYYY-MM
  status                 RecordStatus @default(DRAFT)
  
  actualBaseSalary       Decimal      @default(0) @db.Decimal(18, 2)
  actualEfficiencySalary Decimal      @default(0) @db.Decimal(18, 2)
  actualPieceworkSalary  Decimal      @default(0) @db.Decimal(18, 2)
  totalAllowance         Decimal      @default(0) @db.Decimal(18, 2)
  totalBonus             Decimal      @default(0) @db.Decimal(18, 2)
  insuranceDeduction     Decimal      @default(0) @db.Decimal(18, 2)
  pitDeduction           Decimal      @default(0) @db.Decimal(18, 2)
  advancePayment         Decimal      @default(0) @db.Decimal(18, 2)
  netSalary              Decimal      @default(0) @db.Decimal(18, 2)
  
  calculationLog         Json?
  updatedAt              DateTime     @updatedAt

  // Ánh xạ vào bảng 'salary_records'
  @@unique([userId, date])
  @@map("salary_records")
}

// --- 3. CÁC BẢNG CẤU HÌNH ---

model SystemConfig {
  id                  String   @id @default("default_config")
  baseSalary          Decimal  @default(0) @db.Decimal(18, 2)
  standardWorkDays    Int      @default(26)
  insuranceBaseSalary Decimal  @default(0) @db.Decimal(18, 2)
  maxInsuranceBase    Decimal  @default(0) @db.Decimal(18, 2)
  pitSteps            Json?
  insuranceRules      Json?
  seniorityRules      Json?
  updatedAt           DateTime @updatedAt
  
  // Ánh xạ vào bảng 'system_configs'
  @@map("system_configs")
}

model SalaryFormula {
  id          String   @id @default(cuid())
  name        String
  code        String   @unique
  area        String   
  expression  String   @db.Text
  description String?  @db.Text
  status      String   @default("ACTIVE")
  group       String?
  
  // Ánh xạ vào bảng 'salary_formulas'
  @@map("salary_formulas")
}

model SalaryVariable {
  id          String   @id @default(cuid())
  name        String
  code        String   @unique
  group       String
  description String?  @db.Text
  
  // Ánh xạ vào bảng 'salary_variables'
  @@map("salary_variables")
}

model PieceworkConfig {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  unitPrice Decimal  @default(0) @db.Decimal(18, 2)
  
  // Ánh xạ vào bảng 'piecework_configs'
  @@map("piecework_configs")
}

model DailyWorkItem {
  id        String   @id @default(cuid())
  name      String
  unitPrice Decimal  @default(0) @db.Decimal(18, 2)
  type      String   
  
  // Ánh xạ vào bảng 'daily_work_items'
  @@map("daily_work_items")
}

model Holiday {
  id      String   @id @default(cuid())
  date    String   @unique // YYYY-MM-DD
  name    String
  rate    Float    @default(3.0)
  
  // Ánh xạ vào bảng 'holidays'
  @@map("holidays")
}

model BonusType {
  id        String   @id @default(cuid())
  name      String
  code      String   @unique
  isTaxable Boolean  @default(true)
  
  // Ánh xạ vào bảng 'bonus_types'
  @@map("bonus_types")
}

model AnnualBonusPolicy {
  id          String   @id @default(cuid())
  name        String
  formulaCode String
  condition   String?
  
  // Ánh xạ vào bảng 'annual_bonus_policies'
  @@map("annual_bonus_policies")
}

// --- 4. TIÊU CHÍ & KHUNG BẬC ---

model CriterionGroup {
  id       String      @id @default(cuid())
  name     String
  weight   Float       @default(0)
  items    Criterion[]
  
  // Ánh xạ vào bảng 'criterion_groups'
  @@map("criterion_groups")
}

model Criterion {
  id             String            @id @default(cuid())
  name           String
  description    String?           @db.Text
  points         Float             @default(0)
  type           String
  target         String
  proofRequired  Boolean           @default(false)
  groupId        String?
  group          CriterionGroup?   @relation(fields: [groupId], references: [id])
  
  // Ánh xạ vào bảng 'criteria'
  @@map("criteria")
}

model SalaryRank {
  id           String        @id @default(cuid())
  name         String
  description  String?
  baseSalary   Decimal       @default(0) @db.Decimal(18, 2)
  allowance    Decimal       @default(0) @db.Decimal(18, 2)
  grades       SalaryGrade[]
  
  // Ánh xạ vào bảng 'salary_ranks'
  @@map("salary_ranks")
}

model SalaryGrade {
  id         String     @id @default(cuid())
  name       String
  multiplier Float      @default(1.0)
  amount     Decimal    @default(0) @db.Decimal(18, 2)
  rankId     String
  rank       SalaryRank @relation(fields: [rankId], references: [id], onDelete: Cascade)
  
  // Ánh xạ vào bảng 'salary_grades'
  @@map("salary_grades")
}

model EvaluationRequest {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  criteriaId      String
  criteriaName    String
  type            String
  target          String
  points          Float
  description     String?      @db.Text
  proofFileName   String?
  requesterId     String
  status          RecordStatus @default(PENDING)
  createdAt       DateTime     @default(now())
  rejectionReason String?      @db.Text
  
  // Ánh xạ vào bảng 'evaluation_requests'
  @@map("evaluation_requests")
}

model AuditLog {
  id             String   @id @default(cuid())
  action         String
  actor          String
  details        String   @db.Text
  isConfigAction Boolean  @default(false)
  timestamp      DateTime @default(now())
  
  // Ánh xạ vào bảng 'audit_logs'
  @@map("audit_logs")
}