generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==========================================
// 1. NHÂN SỰ & TỔ CHỨC
// ==========================================

enum UserRole {
  ADMIN
  BAN_LANH_DAO
  GIAM_DOC_KHOI
  QUAN_LY
  KE_TOAN_LUONG
  NHAN_SU
  NHAN_VIEN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  MATERNITY
  PROBATION
  PENDING_APPROVAL
}

enum RecordStatus {
  DRAFT
  PENDING
  PENDING_MANAGER
  PENDING_GDK
  PENDING_BLD
  PENDING_HR
  APPROVED
  REJECTED
}

enum AttendanceType {
  TIME
  PIECEWORK
  DAILY
  MODE
  HOLIDAY
  PAID_LEAVE
  UNPAID
  WAITING
}

model Department {
  id              String   @id @default(cuid())
  name            String
  budgetNorm      Decimal  @default(0) @db.Decimal(18, 2)
  managerId       String?
  hrId            String?
  blockDirectorId String?
  users           User[]
  
  @@map("departments")
}

model User {
  id                   String       @id
  username             String       @unique
  password             String
  name                 String
  avatar               String?      @db.Text
  email                String?
  phone                String?
  
  // -- Thông tin cá nhân chi tiết --
  gender               String?      @default("OTHER")
  birthday             DateTime?
  address              String?      @db.Text
  identityNumber       String?
  bankAccount          String?
  bankName             String?
  taxCode              String?
  socialInsuranceNo    String?
  
  joinDate             DateTime     @default(now())
  status               UserStatus   @default(ACTIVE)
  roles                Json
  numberOfDependents   Int          @default(0)
  
  // -- Tổ chức & Kiêm nhiệm (BỔ SUNG ĐỂ KHỚP FRONTEND) --
  currentDeptId        String?
  department           Department?  @relation(fields: [currentDeptId], references: [id])
  assignedDeptIds      Json?        // [FIX] Mảng ID các phòng ban kiêm nhiệm
  activeAssignments    Json?        // [FIX] Chi tiết kiêm nhiệm
  
  currentRankId        String?
  currentGradeId       String?
  currentPosition      String?
  
  // -- Cấu hình lương --
  paymentType          String       @default("TIME")
  efficiencySalary     Decimal      @default(0) @db.Decimal(18, 2)
  pieceworkUnitPrice   Decimal      @default(0) @db.Decimal(18, 2)
  reservedBonusAmount  Decimal      @default(0) @db.Decimal(18, 2)
  probationRate        Int          @default(100)
  
  salaryHistory        Json?        // [FIX] Lịch sử lương
  
  attendanceRecords    AttendanceRecord[]
  salaryRecords        SalaryRecord[]
  evaluationRequests   EvaluationRequest[]

  @@map("users")
}

// ==========================================
// 2. CẤU HÌNH LƯƠNG (FORMULA ENGINE)
// ==========================================

model SalaryVariable {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  group       String
  description String?  @db.Text
  
  @@map("salary_variables")
}

model SalaryFormula {
  id          String   @id @default(cuid())
  code        String   @unique // Mã công thức (F1, F2...)
  name        String
  area        String   // OFFICE, FACTORY, ALL
  
  // [QUAN TRỌNG] Trường này bắt buộc phải có để map kết quả vào bảng lương
  targetField String?  @default("") // VD: actualBaseSalary, netSalary - Cho phép null để tương thích với DB cũ
  
  expression  String   @db.Text // VD: ({LCB_dm} / {Ctc}) * {Ctt}
  description String?  @db.Text
  status      String   @default("ACTIVE") // hoặc isActive boolean ở frontend
  group       String?
  order       Int      @default(0)
  
  @@map("salary_formulas")
}

model SalaryRank {
  id           String        @id @default(cuid())
  name         String
  description  String?
  order        Int           @default(0)
  baseSalary   Decimal       @default(0) @db.Decimal(18, 2)
  allowance    Decimal       @default(0) @db.Decimal(18, 2)
  grades       SalaryGrade[]
  
  @@map("salary_ranks")
}

model SalaryGrade {
  id                String   @id @default(cuid())
  name              String
  level             Int      @default(1)
  multiplier        Float    @default(1.0)
  amount            Decimal  @default(0) @db.Decimal(18, 2)
  baseSalary        Decimal  @default(0) @db.Decimal(18, 2)
  efficiencySalary  Decimal  @default(0) @db.Decimal(18, 2)
  fixedAllowance    Decimal  @default(0) @db.Decimal(18, 2)
  flexibleAllowance Decimal  @default(0) @db.Decimal(18, 2)
  otherSalary       Decimal  @default(0) @db.Decimal(18, 2)
  fixedBonuses      Json?    // [FIX] Khớp Mockdata
  
  rankId            String
  rank              SalaryRank @relation(fields: [rankId], references: [id], onDelete: Cascade)
  
  @@map("salary_grades")
}

model PieceworkConfig {
  id           String   @id @default(cuid())
  userId       String
  month        String
  targetOutput Float    @default(0)
  unitPrice    Decimal  @default(0) @db.Decimal(18, 2)
  
  @@unique([userId, month])
  @@map("piecework_configs")
}

model DailyWorkItem {
  id        String   @id @default(cuid())
  name      String
  unitPrice Decimal  @default(0) @db.Decimal(18, 2)
  type      String   @default("SERVICE")
  
  @@map("daily_work_items")
}

model Holiday {
  id      String   @id @default(cuid())
  date    String   @unique
  name    String
  rate    Float    @default(3.0)
  
  @@map("holidays")
}

model SystemConfig {
  id                  String   @id @default("default_config")
  baseSalary          Decimal  @default(1800000) @db.Decimal(18, 2)
  standardWorkDays    Int      @default(26)
  insuranceBaseSalary Decimal  @default(1800000) @db.Decimal(18, 2)
  maxInsuranceBase    Decimal  @default(36000000) @db.Decimal(18, 2)
  pitSteps            Json?
  seniorityRules      Json?
  insuranceRules      Json?
  updatedAt           DateTime @updatedAt
  
  @@map("system_configs")
}

// ==========================================
// 3. ĐÁNH GIÁ & KPI
// ==========================================

model CriterionGroup {
  id       String      @id @default(cuid())
  name     String
  weight   Float       @default(0)
  items    Criterion[]
  @@map("criterion_groups")
}

model Criterion {
  id             String            @id @default(cuid())
  name           String
  description    String?           @db.Text
  points         Float             @default(0)
  type           String            // BONUS, PENALTY
  unit           String?           // PERCENT, AMOUNT [FIX]
  value          Float             @default(0)        // [FIX]
  threshold      Float             @default(0)        // [FIX]
  target         String            
  proofRequired  Boolean           @default(false)
  groupId        String?
  group          CriterionGroup?   @relation(fields: [groupId], references: [id])
  @@map("criteria")
}

model EvaluationRequest {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  
  // userName không lưu trong DB - được map từ user.name trong server.ts
  criteriaId      String
  criteriaName    String
  
  type            String
  scope           String?      // MAIN_JOB, SIDE_JOB [FIX]
  target          String       @default("MONTHLY_SALARY")
  points          Float
  description     String?      @db.Text
  proofFileName   String?
  requesterId     String
  status          RecordStatus @default(PENDING)
  createdAt       DateTime     @default(now())
  rejectionReason String?      @db.Text
  
  @@map("evaluation_requests")
}

// ==========================================
// 4. DỮ LIỆU VẬN HÀNH
// ==========================================

model AttendanceRecord {
  id                      String         @id @default(cuid())
  userId                  String
  user                    User           @relation(fields: [userId], references: [id])
  date                    String
  type                    AttendanceType @default(TIME)
  hours                   Float          @default(8)
  overtimeHours           Float          @default(0)
  otRate                  Float          @default(1.5)
  isOvertimeWithOutput    Boolean        @default(false)
  output                  Float?
  pieceworkUnitPrice      Decimal?       @db.Decimal(18, 2)
  dailyWorkItemId         String?
  overtimeDailyWorkItemId String?
  status                  RecordStatus   @default(DRAFT)
  notes                   String?        @db.Text
  rejectionReason         String?        @db.Text
  sentToHrAt              DateTime?
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt

  @@unique([userId, date])
  @@map("attendance_records")
}

model SalaryRecord {
  id                     String       @id @default(cuid())
  userId                 String
  user                   User         @relation(fields: [userId], references: [id])
  date                   String       // YYYY-MM
  status                 RecordStatus @default(DRAFT)
  
  // Các chỉ số snapshot
  Ctc                    Float        @default(0)
  Ctt                    Float        @default(0)
  Cn                     Float        @default(0)
  NCD                    Float        @default(0)
  NL                     Float        @default(0)
  NCL                    Float        @default(0)
  NKL                    Float        @default(0)
  NCV                    Float        @default(0)
  LCB_dm                 Decimal      @default(0) @db.Decimal(18, 2)
  LHQ_dm                 Decimal      @default(0) @db.Decimal(18, 2)
  LSL_dm                 Decimal      @default(0) @db.Decimal(18, 2)
  SL_khoan               Float        @default(0)
  SL_tt                  Float        @default(0)
  DG_khoan               Decimal      @default(0) @db.Decimal(18, 2)
  HS_tn                  Float        @default(0)
  probationRate          Int          @default(100)
  
  // Kết quả tính toán
  actualBaseSalary       Decimal      @default(0) @db.Decimal(18, 2)
  actualEfficiencySalary Decimal      @default(0) @db.Decimal(18, 2)
  actualPieceworkSalary  Decimal      @default(0) @db.Decimal(18, 2)
  otherSalary            Decimal      @default(0) @db.Decimal(18, 2)
  totalAllowance         Decimal      @default(0) @db.Decimal(18, 2)
  totalBonus             Decimal      @default(0) @db.Decimal(18, 2)
  overtimeSalary         Decimal      @default(0) @db.Decimal(18, 2)
  insuranceDeduction     Decimal      @default(0) @db.Decimal(18, 2)
  pitDeduction           Decimal      @default(0) @db.Decimal(18, 2)
  unionFee               Decimal      @default(0) @db.Decimal(18, 2)
  advancePayment         Decimal      @default(0) @db.Decimal(18, 2)
  otherDeductions        Decimal      @default(0) @db.Decimal(18, 2)
  calculatedSalary       Decimal      @default(0) @db.Decimal(18, 2) // Gross
  netSalary              Decimal      @default(0) @db.Decimal(18, 2)
  
  calculationLog         Json?
  adjustments            Json?
  sentToHrAt             DateTime?
  rejectionReason        String?      @db.Text
  lastUpdated            DateTime     @updatedAt

  @@unique([userId, date])
  @@map("salary_records")
}

model AuditLog {
  id             String   @id @default(cuid())
  action         String
  actor          String
  details        String   @db.Text
  timestamp      DateTime @default(now())
  isConfigAction Boolean  @default(false)
  @@map("audit_logs")
}

model BonusType {
  id          String   @id @default(cuid())
  name        String
  code        String   @unique
  month       Int?
  description String?  @db.Text
  isTaxable   Boolean  @default(true)
  @@map("bonus_types")
}

model AnnualBonusPolicy {
  id          String   @id @default(cuid())
  bonusTypeId String?
  rankId      String?
  gradeId     String?
  amount      Decimal  @default(0) @db.Decimal(18, 2)
  name        String?
  formulaCode String?
  condition   String?
  @@map("annual_bonus_policies")
}