generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// ==========================================
// 1. NHÂN SỰ & TỔ CHỨC (HUMAN RESOURCES)
// ==========================================

enum UserRole {
  ADMIN
  BAN_LANH_DAO
  GIAM_DOC_KHOI
  QUAN_LY
  KE_TOAN_LUONG
  NHAN_SU
  NHAN_VIEN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  MATERNITY
  PROBATION
}

model Department {
  id              String   @id @default(cuid())
  name            String
  budgetNorm      Decimal  @default(0) @db.Decimal(18, 2)
  managerId       String?
  hrId            String?
  blockDirectorId String?
  users           User[]
  
  @@map("departments")
}

model User {
  id                   String       @id
  username             String       @unique
  password             String
  name                 String
  avatar               String?      @db.Text
  email                String?
  phone                String?
  
  // -- Thông tin cá nhân chi tiết --
  gender               String?      @default("OTHER") // NAM, NU
  birthday             DateTime?
  address              String?      @db.Text
  identityNumber       String?      // CCCD
  bankAccount          String?      
  bankName             String?
  taxCode              String?
  socialInsuranceNo    String?
  
  joinDate             DateTime     @default(now())
  status               UserStatus   @default(ACTIVE)
  roles                Json         // ["ADMIN", "NHAN_VIEN"]
  
  // -- Tổ chức --
  currentDeptId        String?
  department           Department?  @relation(fields: [currentDeptId], references: [id])
  currentRankId        String?      // R1, R2...
  currentGradeId       String?      // G_R1_1...
  
  // -- Cấu hình lương cá nhân --
  paymentType          String       @default("TIME") // TIME, PIECEWORK
  efficiencySalary     Decimal      @default(0) @db.Decimal(18, 2) // Lương HQ định mức
  pieceworkUnitPrice   Decimal      @default(0) @db.Decimal(18, 2) // Đơn giá khoán
  reservedBonusAmount  Decimal      @default(0) @db.Decimal(18, 2) // Quỹ thưởng giữ lại
  probationRate        Int          @default(100) // Tỷ lệ thử việc
  numberOfDependents   Int          @default(0)   // Người phụ thuộc
  
  // -- Quan hệ --
  attendanceRecords    AttendanceRecord[]
  salaryRecords        SalaryRecord[]
  evaluationRequests   EvaluationRequest[]

  @@map("users")
}

// ==========================================
// 2. CẤU HÌNH LƯƠNG & KHUNG NĂNG LỰC (CONFIGURATION)
// ==========================================

// Bảng chứa các biến số (VD: LCB_dm, Ctc, KP...)
model SalaryVariable {
  id          String   @id @default(cuid())
  code        String   @unique // Mã biến để dùng trong công thức
  name        String
  group       String   // Nhóm: CÔNG, ĐỊNH MỨC, KẾT QUẢ...
  description String?  @db.Text
  
  @@map("salary_variables")
}

// Bảng chứa công thức tính lương (Formula Engine)
model SalaryFormula {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  area        String   // Áp dụng cho: OFFICE, FACTORY, ALL
  expression  String   @db.Text // VD: ({LCB_dm} / {Ctc}) * {Ctt}
  description String?  @db.Text
  status      String   @default("ACTIVE")
  group       String?  // Nhóm công thức
  order       Int      @default(0) // Thứ tự tính toán
  
  @@map("salary_formulas")
}

// Cấp bậc (Ranks)
model SalaryRank {
  id           String        @id @default(cuid())
  name         String
  description  String?
  order        Int           @default(0)
  baseSalary   Decimal       @default(0) @db.Decimal(18, 2)
  allowance    Decimal       @default(0) @db.Decimal(18, 2)
  grades       SalaryGrade[]
  
  @@map("salary_ranks")
}

// Bậc lương (Grades)
model SalaryGrade {
  id         String     @id @default(cuid())
  name       String
  level      Int        @default(1)
  multiplier Float      @default(1.0) // Hệ số
  amount     Decimal    @default(0) @db.Decimal(18, 2) // Số tiền
  rankId     String
  rank       SalaryRank @relation(fields: [rankId], references: [id], onDelete: Cascade)
  
  @@map("salary_grades")
}

// Đơn giá sản phẩm (Lương khoán)
model PieceworkConfig {
  id        String   @id @default(cuid())
  code      String   @unique
  name      String
  unitPrice Decimal  @default(0) @db.Decimal(18, 2)
  
  @@map("piecework_configs")
}

// Công việc nhật (Daily Work)
model DailyWorkItem {
  id        String   @id @default(cuid())
  name      String
  unitPrice Decimal  @default(0) @db.Decimal(18, 2)
  type      String   @default("SERVICE")
  
  @@map("daily_work_items")
}

// Ngày lễ tết
model Holiday {
  id      String   @id @default(cuid())
  date    String   @unique
  name    String
  rate    Float    @default(3.0) // Hệ số lương đi làm ngày lễ
  
  @@map("holidays")
}

model SystemConfig {
  id                  String   @id @default("default_config")
  baseSalary          Decimal  @default(1800000) @db.Decimal(18, 2) // Lương cơ sở
  standardWorkDays    Int      @default(26)
  insuranceBaseSalary Decimal  @default(1800000) @db.Decimal(18, 2)
  maxInsuranceBase    Decimal  @default(36000000) @db.Decimal(18, 2)
  pitSteps            Json?    // Biểu thuế lũy tiến
  insuranceRules      Json?    // Tỷ lệ bảo hiểm
  updatedAt           DateTime @updatedAt
  
  @@map("system_configs")
}

// ==========================================
// 3. ĐÁNH GIÁ & KPI (EVALUATION)
// ==========================================

model CriterionGroup {
  id       String      @id @default(cuid())
  name     String
  weight   Float       @default(0)
  items    Criterion[]
  @@map("criterion_groups")
}

model Criterion {
  id             String            @id @default(cuid())
  name           String
  description    String?           @db.Text
  points         Float             @default(0)
  type           String            // BONUS, PENALTY
  target         String            // MONTHLY, PROJECT
  proofRequired  Boolean           @default(false)
  groupId        String?
  group          CriterionGroup?   @relation(fields: [groupId], references: [id])
  @@map("criteria")
}

model EvaluationRequest {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  criteriaId      String
  criteriaName    String
  type            String
  target          String
  points          Float
  description     String?      @db.Text
  proofFileName   String?
  requesterId     String
  status          String       @default("PENDING") // APPROVED, REJECTED
  createdAt       DateTime     @default(now())
  rejectionReason String?      @db.Text
  
  @@map("evaluation_requests")
}

// ==========================================
// 4. DỮ LIỆU VẬN HÀNH (OPERATIONAL DATA)
// ==========================================

model AttendanceRecord {
  id                   String         @id @default(cuid())
  userId               String
  user                 User           @relation(fields: [userId], references: [id])
  date                 String         // YYYY-MM-DD
  type                 String         @default("TIME") 
  hours                Float          @default(8)
  overtimeHours        Float          @default(0)
  otRate               Float          @default(1.5)
  isOvertimeWithOutput Boolean        @default(false)
  output               Float?         // Sản lượng (nếu làm khoán)
  pieceworkUnitPrice   Decimal?       @db.Decimal(18, 2)
  status               String         @default("DRAFT")
  notes                String?        @db.Text
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt

  @@unique([userId, date])
  @@map("attendance_records")
}

model SalaryRecord {
  id                     String       @id @default(cuid())
  userId                 String
  user                   User         @relation(fields: [userId], references: [id])
  date                   String       // YYYY-MM
  status                 String       @default("DRAFT")
  
  // Các thành phần lương (Kết quả tính toán)
  actualBaseSalary       Decimal      @default(0) @db.Decimal(18, 2)
  actualEfficiencySalary Decimal      @default(0) @db.Decimal(18, 2)
  actualPieceworkSalary  Decimal      @default(0) @db.Decimal(18, 2)
  totalAllowance         Decimal      @default(0) @db.Decimal(18, 2)
  totalBonus             Decimal      @default(0) @db.Decimal(18, 2)
  insuranceDeduction     Decimal      @default(0) @db.Decimal(18, 2)
  pitDeduction           Decimal      @default(0) @db.Decimal(18, 2)
  advancePayment         Decimal      @default(0) @db.Decimal(18, 2)
  netSalary              Decimal      @default(0) @db.Decimal(18, 2)
  
  calculationLog         Json?        // Log chi tiết công thức
  updatedAt              DateTime     @updatedAt

  @@unique([userId, date])
  @@map("salary_records")
}

model AuditLog {
  id             String   @id @default(cuid())
  action         String
  actor          String
  details        String   @db.Text
  timestamp      DateTime @default(now())
  
  @@map("audit_logs")
}

model BonusType {
  id        String   @id @default(cuid())
  name      String
  code      String   @unique
  isTaxable Boolean  @default(true)
  @@map("bonus_types")
}

model AnnualBonusPolicy {
  id          String   @id @default(cuid())
  name        String
  formulaCode String
  condition   String?
  @@map("annual_bonus_policies")
}