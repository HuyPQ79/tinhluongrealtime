// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  // "native" để chạy trên máy local của bạn
  // "debian-openssl-3.0.x" là chuẩn cho node:20 (Debian Bookworm)
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// --- ENUMS (Đảm bảo tính nhất quán dữ liệu) ---

enum UserRole {
  ADMIN
  BAN_LANH_DAO
  GIAM_DOC_KHOI
  QUAN_LY
  KE_TOAN_LUONG
  NHAN_SU
  NHAN_VIEN
}

enum UserStatus {
  ACTIVE
  INACTIVE
  MATERNITY
  PROBATION
  PENDING_APPROVAL
}

enum RecordStatus {
  DRAFT
  PENDING
  PENDING_MANAGER
  PENDING_GDK
  PENDING_BLD
  PENDING_HR
  APPROVED
  REJECTED
}

enum AttendanceType {
  TIME
  PIECEWORK
  DAILY
  MODE
  HOLIDAY
  PAID_LEAVE
  UNPAID
  WAITING
}

// --- MODELS ---

model Department {
  id              String   @id @default(cuid())
  name            String
  budgetNorm      Decimal  @default(0) @db.Decimal(18, 2)
  managerId       String?
  blockDirectorId String?
  hrId            String?
  users           User[]   @relation("UserDepartment")
  
  @@map("departments")
}

model User {
  id                   String               @id
  username             String               @unique
  password             String
  name                 String
  avatar               String?              @db.Text
  email                String?
  phone                String?
  
  // -- Thông tin cá nhân chi tiết --
  gender               String?              @default("OTHER") // NAM, NU
  birthday             DateTime?
  address              String?              @db.Text
  identityNumber       String?              // CCCD
  bankAccount          String?      
  bankName             String?
  taxCode              String?
  socialInsuranceNo    String?
  
  joinDate             DateTime             @default(now())
  status               UserStatus           @default(ACTIVE)
  roles                Json                 // Lưu mảng [UserRole]
  numberOfDependents   Int                  @default(0)
  
  // -- Tổ chức --
  currentDeptId        String?
  department           Department?          @relation("UserDepartment", fields: [currentDeptId], references: [id])
  currentRankId        String?              // R1, R2...
  currentGradeId       String?              // G_R1_1...
  currentPosition      String?
  
  // -- Cấu hình lương cá nhân --
  paymentType          String               @default("TIME") // TIME | PIECEWORK
  efficiencySalary     Decimal              @default(0) @db.Decimal(18, 2) // Lương HQ định mức
  pieceworkUnitPrice   Decimal              @default(0) @db.Decimal(18, 2) // Đơn giá khoán
  reservedBonusAmount  Decimal              @default(0) @db.Decimal(18, 2) // Quỹ thưởng giữ lại
  probationRate        Int                  @default(100) // Tỷ lệ thử việc
  
  attendanceRecords    AttendanceRecord[]
  evaluationRequests   EvaluationRequest[]
  salaryRecords        SalaryRecord[]
  
  @@index([username])
  @@index([currentDeptId])
  @@map("users")
}

model AttendanceRecord {
  id                      String         @id @default(cuid())
  userId                  String
  user                    User           @relation(fields: [userId], references: [id])
  date                    String         // YYYY-MM-DD
  type                    AttendanceType @default(TIME)
  hours                   Float          @default(8)
  overtimeHours           Float          @default(0)
  otRate                  Float          @default(1.5)
  isOvertimeWithOutput    Boolean        @default(false)
  output                  Float?
  pieceworkUnitPrice      Decimal?       @db.Decimal(18, 2)
  dailyWorkItemId         String?        // ID công việc nhật
  overtimeDailyWorkItemId String?        // ID công việc nhật tăng ca
  status                  RecordStatus   @default(DRAFT)
  notes                   String?        @db.Text
  sentToHrAt              DateTime?
  rejectionReason         String?        @db.Text
  createdAt               DateTime       @default(now())
  updatedAt               DateTime       @updatedAt

  // Khóa tổ hợp: Một nhân viên chỉ có 1 bản ghi công duy nhất mỗi ngày
  @@unique([userId, date])
  @@index([date])
  @@index([status])
  @@map("attendance_records")
}

model EvaluationRequest {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id])
  criteriaId      String
  criteriaName    String
  type            String       // BONUS | PENALTY
  scope           String?      // MAIN_JOB | SIDE_JOB
  target          String       @default("MONTHLY_SALARY") // MONTHLY_SALARY | RESERVED_BONUS
  points          Float
  description     String?      @db.Text
  proofFileName   String?
  requesterId     String
  status          RecordStatus @default(PENDING)
  createdAt       DateTime     @default(now())
  rejectionReason String?      @db.Text

  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("evaluation_requests")
}

model SalaryRecord {
  id                    String       @id @default(cuid())
  userId                String
  user                  User         @relation(fields: [userId], references: [id])
  date                  String       // YYYY-MM
  status                RecordStatus @default(DRAFT)
  
  // Các chỉ số snapshot lúc tính lương
  Ctc                   Float        @default(0) // Công tiêu chuẩn
  Ctt                   Float        @default(0) // Công thực tế
  Cn                    Float        @default(0) // Công nhật
  NCD                   Float        @default(0) // Nghỉ chế độ
  NL                    Float        @default(0) // Nghỉ lễ
  NCL                   Float        @default(0) // Nghỉ có lương
  NKL                   Float        @default(0) // Nghỉ không lương
  NCV                   Float        @default(0) // Nghỉ chờ việc
  LCB_dm                Decimal      @default(0) @db.Decimal(18, 2) // Lương CB định mức
  LHQ_dm                Decimal      @default(0) @db.Decimal(18, 2) // Lương HQ định mức
  LSL_dm                Decimal      @default(0) @db.Decimal(18, 2) // Lương khoán định mức
  SL_khoan              Float        @default(0) // Sản lượng khoán
  SL_tt                 Float        @default(0) // Sản lượng thực tế
  DG_khoan              Decimal      @default(0) @db.Decimal(18, 2) // Đơn giá khoán
  HS_tn                 Float        @default(0) // Hệ số thâm niên
  probationRate         Int          @default(100) // Tỷ lệ thử việc snapshot
  
  // Các thành phần lương (Kết quả tính toán)
  actualBaseSalary      Decimal      @default(0) @db.Decimal(18, 2)
  actualEfficiencySalary Decimal     @default(0) @db.Decimal(18, 2)
  actualPieceworkSalary Decimal      @default(0) @db.Decimal(18, 2)
  otherSalary            Decimal      @default(0) @db.Decimal(18, 2) // Lương khác (OT, công nhật, nghỉ lễ)
  totalAllowance        Decimal      @default(0) @db.Decimal(18, 2)
  totalBonus            Decimal      @default(0) @db.Decimal(18, 2)
  overtimeSalary        Decimal      @default(0) @db.Decimal(18, 2) // Lương tăng ca
  insuranceDeduction    Decimal      @default(0) @db.Decimal(18, 2)
  pitDeduction          Decimal      @default(0) @db.Decimal(18, 2)
  unionFee              Decimal      @default(0) @db.Decimal(18, 2) // Công đoàn
  advancePayment        Decimal      @default(0) @db.Decimal(18, 2)
  otherDeductions       Decimal      @default(0) @db.Decimal(18, 2) // Khấu trừ khác
  calculatedSalary      Decimal      @default(0) @db.Decimal(18, 2) // Tổng Gross
  netSalary             Decimal      @default(0) @db.Decimal(18, 2)
  
  calculationLog        Json?        // Lưu chi tiết công thức đã áp dụng
  adjustments           Json?        // Mảng các điều chỉnh tay
  sentToHrAt            DateTime?
  rejectionReason       String?      @db.Text
  lastUpdated           DateTime     @updatedAt

  @@unique([userId, date])
  @@index([date])
  @@map("salary_records")
}

model AuditLog {
  id             String   @id @default(cuid())
  action         String
  actor          String
  timestamp      DateTime @default(now())
  details        String   @db.Text
  isConfigAction Boolean  @default(false)

  @@index([timestamp])
  @@map("audit_logs")
}

// ==========================================
// CẤU HÌNH LƯƠNG & KHUNG NĂNG LỰC
// ==========================================

model SalaryVariable {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  group       String
  description String?  @db.Text
  
  @@map("salary_variables")
}

model SalaryFormula {
  id          String   @id @default(cuid())
  code        String   @unique
  name        String
  area        String
  expression  String   @db.Text
  description String?  @db.Text
  status      String   @default("ACTIVE")
  group       String?
  order       Int      @default(0)
  
  @@map("salary_formulas")
}

model SalaryRank {
  id           String        @id @default(cuid())
  name         String
  description  String?
  order        Int           @default(0)
  baseSalary   Decimal       @default(0) @db.Decimal(18, 2)
  allowance    Decimal       @default(0) @db.Decimal(18, 2)
  grades       SalaryGrade[]
  
  @@map("salary_ranks")
}

model SalaryGrade {
  id              String     @id @default(cuid())
  name            String
  level           Int        @default(1)
  multiplier      Float      @default(1.0)
  amount          Decimal    @default(0) @db.Decimal(18, 2)
  baseSalary      Decimal    @default(0) @db.Decimal(18, 2)
  efficiencySalary Decimal   @default(0) @db.Decimal(18, 2)
  fixedAllowance  Decimal    @default(0) @db.Decimal(18, 2)
  flexibleAllowance Decimal  @default(0) @db.Decimal(18, 2)
  otherSalary     Decimal    @default(0) @db.Decimal(18, 2)
  fixedBonuses    Json?
  rankId          String
  rank            SalaryRank @relation(fields: [rankId], references: [id], onDelete: Cascade)
  
  @@map("salary_grades")
}

model PieceworkConfig {
  id          String   @id @default(cuid())
  userId      String
  month       String   // YYYY-MM
  targetOutput Float    @default(0) // Sản lượng mục tiêu
  unitPrice   Decimal  @default(0) @db.Decimal(18, 2) // Đơn giá
  
  @@unique([userId, month])
  @@index([userId])
  @@index([month])
  @@map("piecework_configs")
}

model DailyWorkItem {
  id        String   @id @default(cuid())
  name      String
  unitPrice Decimal  @default(0) @db.Decimal(18, 2)
  type      String   @default("SERVICE")
  
  @@map("daily_work_items")
}

model Holiday {
  id      String   @id @default(cuid())
  date    String   @unique
  name    String
  rate    Float    @default(3.0)
  
  @@map("holidays")
}

model SystemConfig {
  id                  String   @id @default("default_config")
  baseSalary          Decimal  @default(1800000) @db.Decimal(18, 2)
  standardWorkDays    Int      @default(26)
  insuranceBaseSalary Decimal  @default(1800000) @db.Decimal(18, 2)
  maxInsuranceBase    Decimal  @default(36000000) @db.Decimal(18, 2)
  pitSteps            Json?
  insuranceRules      Json?
  updatedAt           DateTime @updatedAt
  
  @@map("system_configs")
}

model CriterionGroup {
  id       String      @id @default(cuid())
  name     String
  weight   Float       @default(0)
  items    Criterion[]
  @@map("criterion_groups")
}

model Criterion {
  id             String            @id @default(cuid())
  name           String
  description    String?           @db.Text
  points         Float             @default(0)
  type           String            // BONUS, PENALTY
  unit           String?           // PERCENT | AMOUNT
  value          Float             @default(0)
  threshold      Float             @default(0)
  target         String            // MONTHLY, PROJECT
  proofRequired  Boolean           @default(false)
  groupId        String?
  group          CriterionGroup?   @relation(fields: [groupId], references: [id])
  @@map("criteria")
}

model BonusType {
  id        String   @id @default(cuid())
  name      String
  code      String   @unique
  isTaxable Boolean  @default(true)
  @@map("bonus_types")
}

model AnnualBonusPolicy {
  id          String   @id @default(cuid())
  name        String
  formulaCode String
  condition   String?
  @@map("annual_bonus_policies")
}
